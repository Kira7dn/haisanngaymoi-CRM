{
    // ESLint Configuration
    "eslint.enable": true,
    "eslint.lintOnSave": true,
    "eslint.run": "onType", // Run ESLint on typing, not just on save
    "eslint.problems.showCurrentDocumentOnly": false, // Show problems from all files
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],

    // Problem Matcher - Show all problems in Problems panel
    "problems.showCurrentInStatus": false,
    "problems.sortOrder": "severity",

    // Editor validation
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },

    // TypeScript validation (always enabled)
    "typescript.validate.enable": true,
    "javascript.validate.enable": true,

    // Show all diagnostics from workspace
    "typescript.tsserver.maxTsServerMemory": 4096,
    "typescript.tsserver.experimental.enableProjectDiagnostics": true
}